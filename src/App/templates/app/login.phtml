<script>
    $.ajaxSetup({
        headers: {
            'token': ''
        }
    });

    $('#form-login').submit(function(event){
        event.preventDefault();
        let data = $(this).serialize();

        $.ajax({
            type: "post",
            url: "logar",
            data : data,
            success: function (data) {
                $("#conteudo").html(data);
            },
            error: function (error) {
                error = error.responseJSON.error;
                if (error.indexOf("Login") > 0) {
                    function reload() {
                        window.location.reload();
                    }

                    alert(error, reload);
                } else {
                    alert(error);
                }
            }
        });
    });
</script>
